using System;
class Program
{
    static void Main()
    {
        int n = int.Parse(Console.ReadLine());
        int[,] arr = new int[n, n];
        int count = 0;
        int row = 0;
        int filler = 1;
        
        for (int i = 0; i < n / 2 + 1; i++)
        {
            for (int j = 0; j < n - row; j++)
            {
                if (arr[i, j] == 0)
                {
                    arr[i, j] = filler;
                    filler++;
                }
            }
            count++;
            row++;
            int down = i;
            for (int j = 0; j < n - count; j++)
            {
                if (arr[down + 1, n - row] == 0)
                {
                    arr[down + 1, n - row] = filler;
                    filler++;
                    down++;
                }
            }
            int left = n - row;
            for (int j = 0; j < n - count; j++)
            {
                if (arr[n - row, left-1] == 0)
                {
                    arr[n - row, left-1] = filler;
                    filler++;
                    left--;
                }
            }
            count++;
            int up = n - row;
            for (int j = 0; j < n - count; j++)
            {
                if (arr[up-1, i] == 0)
                {
                    arr[up-1, i] = filler;
                    filler++;
                    up--;
                }
            }
        }

        for (int i = 0; i < n; i++)
        {
            for (int j = 0; j < n; j++)
            {
                if (arr[i, j]<10)
                {
                    Console.Write("{0}  ", arr[i, j]);
                }
                else Console.Write("{0} ", arr[i, j]);
                 
            }
            Console.WriteLine();
            Console.WriteLine();
        }
    }
}
